@{
}
@model IDictionary<IdentityUser,IList<string>>

<div class="container">
    <div class="row">
        <div class="col-3">
            <a class="btn btn-primary btn-block form-control-same-height rounded-0" asp-action="Create"> New</a>
        </div>
    </div>
</div>
<div class="py-5">
    <div class="container">
        <div class="row mb-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Role
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Key.UserName</td>
                            <td>@item.Key.Email</td>

                            <td>
                                @item.Value[0].ToString()
                            </td>
                            <td>
                                <a asp-route-id="@item.Key.Id" asp-action="Edit">Reset Password</a> |
                                <a asp-route-id="@item.Key.Id" asp-action="Delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>