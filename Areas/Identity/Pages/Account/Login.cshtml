@page
@model HouseVin.Areas.Identity.Pages.Account.LoginModel

<form class="login100-form validate-form" id="account" method="post">
    <span class="login100-form-title">
        Member Login
    </span>

    <div class="wrap-input100 validate-input form-group" data-validate="Valid email is required: ex@abc.xyz">
        <input asp-for="Input.Email" class="input100 form-control" type="text"  placeholder="Email">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="wrap-input100 validate-input form-group" data-validate="Password is required">
        <input asp-for="Input.Password" class="input100 form-control" type="password" placeholder="Password">
        <span class="focus-input100"></span>
        <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="wrap-input100">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>
    <div class="container-login100-form-btn">
        <button class="login100-form-btn" type="submit">
            Login
        </button>
    </div>

    <div class="text-center p-t-12">
        <span class="txt1">
            Forgot
        </span>
        <a class="txt2" href="#">
            Username / Password?
        </a>
    </div>
</form>

